{

  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl":".",
    "rootDir": ".",
    "esModuleInterop":true,
    "target": "es2015",
    "module":"commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist/lib",
    "paths": {
      "~@/*": ["./*"],
      "~*": ["./*"],
      "/*": ["./*"]
    }
  },
  "include": [
    "src", "examples"
  ]
}
